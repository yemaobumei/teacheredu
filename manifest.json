
{
  "manifest_version": 3,
  "name": "auto_study",
  "version": "1.0.0",
  "description": "偷点懒吧，自动改变世界",
  "icons":
  {
      "16": "images/24x24.png",
      "48": "images/38x38.png",
      "128": "images/38x38.png"
  },
  "action":{
      "default_icon":
      {
          "24": "images/24x24.png",
          "38": "images/38x38.png"
      }
  },
  "author": "Stack",
  "content_scripts": [
      {
        "matches": ["http://cas.study.teacheredu.cn/*"],
        "js": ["scripts/background.js"],
        "run_at": "document_end"
      }
  ],
  "permissions": []
}

